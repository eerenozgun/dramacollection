// Firestore Security Rules - Production Ready
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin koleksiyonu - sadece admin kullanıcılar erişebilir
    match /admins/{email} {
      allow read, write: if request.auth != null 
        && request.auth.token.email == email
        && exists(/databases/$(database)/documents/admins/$(request.auth.token.email))
        && get(/databases/$(database)/documents/admins/$(request.auth.token.email)).data.isAdmin == true;
    }
    
    // Kullanıcı verileri - sadece kendi verilerine erişebilir
    match /users/{userId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == userId;
    }
    
    // Sepet verileri - sadece kendi sepetine erişebilir
    match /carts/{userId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == userId;
    }
    
    // Favori verileri - sadece kendi favorilerine erişebilir
    match /favorites/{userId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == userId;
    }
    
    // Ürünler - herkes okuyabilir, sadece adminler yazabilir
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null 
        && exists(/databases/$(database)/documents/admins/$(request.auth.token.email))
        && get(/databases/$(database)/documents/admins/$(request.auth.token.email)).data.isAdmin == true;
    }
    
    // Siparişler - sadece adminler ve sipariş sahibi erişebilir
    match /orders/{orderId} {
      allow read, write: if request.auth != null 
        && (resource.data.userId == request.auth.uid 
            || (exists(/databases/$(database)/documents/admins/$(request.auth.token.email))
                && get(/databases/$(database)/documents/admins/$(request.auth.token.email)).data.isAdmin == true));
    }
    
    // Diğer tüm koleksiyonlar için varsayılan kural - ERİŞİM YOK
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
